# Django
DJANGO_SECRET_KEY=replace_me
DJANGO_DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# OneDrive / Microsoft Graph Configuration
# Authentication mode: "client_credentials" or "authorization_code"
ONEDRIVE_AUTH_MODE=client_credentials

# For client credentials flow (Application permissions - requires proper Graph permissions and admin consent):
ONEDRIVE_TENANT_ID=your-tenant-id
ONEDRIVE_CLIENT_ID=your-client-id
ONEDRIVE_CLIENT_SECRET=your-client-secret
# Scope for client credentials (default is https://graph.microsoft.com/.default)
ONEDRIVE_SCOPE=https://graph.microsoft.com/.default

# For delegated (authorization code) flow:
# Provide a valid access token obtained externally, or integrate OAuth in your app.
ONEDRIVE_USER_ACCESS_TOKEN=
ONEDRIVE_REDIRECT_URI=

# Notes:
# - Do NOT commit real secrets.
# - If saving to a user's personal OneDrive, prefer delegated access (authorization_code) with Files.ReadWrite.
# - For app-level access, ensure the app has permission to write to the desired drive.
